    "featPrefix": "claude/feat/",
    "fixPrefix": "claude/fix/"
  },
   "tasks": {
    "root": "spec",
    "featDir": "feat",
    "fixDir": "fix",
    "idPattern": "^[FX][0-9]{3}",
