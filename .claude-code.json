{
  "model":"claude-sonnet-4-5-20250929",
  "autoApprove": true,
  "interactive": false,
  "confirmBeforeRun": false,
  "branch": {
    "base": "claude/intergration",
    "featPrefix": "claude/feat/",
    "fixPrefix": "claude/fix/"
  },
   "tasks": {
    "root": "spec",
    "featDir": "feat",
    "fixDir": "fix",
    "idPattern": "^[TFX][0-9]{3}",
    "files": {
      "description": "description.md",
      "acceptance": "acceptance.md"
    },
    "status": {
      "todo": "status.todo",
      "doing": "status.doing",
      "done": "status.done"
    }
  },
  "rules": {
    "forbidMerge": ["main"],
    "requireTests": true,
    "conventionalCommits": true,
    "autoExecute": true
  },
  "commands": {
    "devUp": "make dev-up",
    "devDown": "make dev-down",

    "test": "make test-compose",
    "testDown": "make test-down",

    "dockerPs": "docker compose ps",
    "dockerLogs": "docker compose logs -f --tail=200",

    "backendTest": "make test-compose",
    "backendBuild": "make test-compose",
    "frontendInstall": "make test-compose",
    "frontendBuild": "make test-compose",
    "dockerBuild": "docker compose build"
  },
  "pr": {
    "target": "claude/intergration",
    "deleteBranchAfterMerge": true,
    "titleFormat": "[{{taskId}}] {{type}}: {{slug}}"
  },
  "tools": {
    "git": true,
    "gh": true,
    "docker": true
  }
}

